<div class="card w-auto">
  <div class="card-header">
    <p>See current selected friend below:</p>
  </div>
  <div class="card-body text-center">
    <%= render @friend %>
    <br/>
    <div class="row">
      <div class="col">
        <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %>
      </div>
      <div class="col">
        <%= link_to "Back to friends", friends_path, class: "btn btn-dark" %>
      </div>
      <div class="col">
        <%= button_to "Delete this friend", @friend, class:"btn btn-danger", method: :delete %>
      <div>
    </div>
  </div>
</div>
